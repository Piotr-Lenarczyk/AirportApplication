@model AirportApplication.Models.City

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IQueryable<Country> countries = ViewBag.Countries;
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CityName" />
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label><br />
                <select asp-for="Country" name="values">
                    @foreach (var item in countries)
                    {
                        <option value="@item.CountryName">@item.CountryName</option>
                    }
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

