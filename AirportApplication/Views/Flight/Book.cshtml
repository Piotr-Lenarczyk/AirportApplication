@model AirportApplication.Models.Flight

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var name = Model.FlightName;
}

<h1 xmlns="http://www.w3.org/1999/html">You are about to book the following flight:</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureDate.Year)-@Html.DisplayFor(model => model.DepartureDate.Month)-@Html.DisplayFor(model => model.DepartureDate.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime.Hour):00
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureGate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureGate)
        </dd>
    </dl>
</div>

<h3>Choose your seat</h3>
<hr />
<form method="post">
    <select id="SeatType" type="string" name="SeatType">
        <option>Window Seat</option>
        <option>Center Seat</option>
        <option>Aisle Seat</option>
    </select><br><br>
    <input type="hidden" name="Flight" value="@name"/>
    <input type="submit" value="Book" class="btn btn-primary" asp-route-id="@Model.FlightName"/>
</form>
<br>
