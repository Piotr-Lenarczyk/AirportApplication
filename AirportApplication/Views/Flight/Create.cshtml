@model AirportApplication.Models.Flight

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IQueryable<Airport> airports = ViewBag.Airports;
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightName" class="control-label"></label>
                <input asp-for="FlightName" class="form-control" />
                <span asp-validation-for="FlightName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureAirport" class="control-label"></label><br />
                <select asp-for="DepartureAirport" name="departure">
                    @foreach (var item in airports)
                    {
                        <option value="@item.AirportName">@item.AirportName</option>
                    }
                </select>
                <span asp-validation-for="DepartureAirport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirport" class="control-label"></label><br />
                <select asp-for="ArrivalAirport" name="arrival">
                    @foreach (var item in airports)
                    {
                        <option value="@item.AirportName">@item.AirportName</option>
                    }
                </select>
                <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label"></label>
                <input type="date" name="DepartureDate"/><br />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input type="time" name="DepartureTime"/><br />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureGate" class="control-label"></label>
                <input asp-for="DepartureGate" class="form-control" />
                <span asp-validation-for="DepartureGate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

