@model AirportApplication.Models.Flight

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Flight?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlightName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlightName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalAirport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureDate.Year)-@Html.DisplayFor(model => model.DepartureDate.Month)-@Html.DisplayFor(model => model.DepartureDate.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime.Hour):00
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureGate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureGate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightName" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
